{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_ANON_KEY": "@supabase_anon_key",
    "MANYCHAT_API_KEY": "@manychat_api_key",
    "WEBHOOK_VERIFY_TOKEN": "@webhook_verify_token"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
